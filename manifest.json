{
    "manifest_version": 3,
    "name": "Surfcatcat",
    "version": "1.0",
    "description": "Content scripts for cat to surf",
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "background": {
        "service_worker": "src/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www3.nhk.or.jp/news/easy/*"
            ],
            "js": [
                "src/nhk.js"
            ]
        },
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "src/youtube.js"
            ],
            "run_at": "document_start",
            "world": "MAIN"
        },
        {
            "matches": [
                "https://learn.microsoft.com/zh-tw/*"
            ],
            "js": [
                "src/microsoft.js"
            ]
        },
        {
            "matches": [
                "https://developer.mozilla.org/zh-TW*"
            ],
            "js": [
                "src/mozilla.js"
            ]
        }
    ]
}